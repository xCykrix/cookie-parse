{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/lib",
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "tests/**/*"
  ]
}
